{
  "fmt": {
    "options": {
      "singleQuote": true
    }
  },
  "tasks": {
    "lint": "deno fmt --check",
    "format": "deno fmt",
    "run": "deno run --allow-run --allow-env --allow-read src/mod.ts",
    "build": "deno compile --allow-run --allow-env --allow-read --output app src/mod.ts && ls -lh app",
    "lock": "deno cache --lock=deno.lock --lock-write src/deps.ts",
    "lock-reload": "deno cache --reload --lock=deno.lock src/deps.ts"
  }
}
